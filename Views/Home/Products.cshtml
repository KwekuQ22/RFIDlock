@{
    ViewData["Title"] = "KOCO Lock";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Set background image for the body */
        body {
            background-image: url('/images/doorOpeming.jpg');  /* Correct path */
            background-size: cover;  
            background-position: center; 
            font-family: Arial, sans-serif;  
            margin: 0;
            padding: 0;
        }

        /* Styling the container */
        .container {
            text-align: center;
            padding: 50px;
        }

        /* Lock/Unlock button styling */
        .button {
            font-size: 20px;
            padding: 15px 30px;
            margin: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .button.lock {
            background-color: #FF5722;  /* Red for lock */
            color: black;
        }

        .button.unlock {
            background-color: #4CAF50;  /* Green for unlock */
            color: black;
        }

        .button:hover {
            opacity: 0.8;
        }

        /* Lock/Unlock status text styling */
        .status {
            font-size: 30px;
            margin-top: 20px;
            color: black;
            font-weight: bold;
        }

        /* Styling for the image inside the toggle */
        .toggle-img {
            width: 200px;
            height: auto;
            margin-top: 30px;
            transition: transform 0.3s ease-in-out;
        }

        /* Optional: Image transition effect */
        .locked img {
            transform: scale(0.9); /* Image shrinks when locked */
        }

        .unlocked img {
            transform: scale(1); /* Image returns to normal size when unlocked */
        }

    </style>
</head>
<body>

    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <div id="statusText" class="status">Door Status: Unlocked</div>

        <!-- Lock/Unlock Buttons -->
        <button class="button lock" onclick="changeLockStatus('locked')">Lock Door</button>
        <button class="button unlock" onclick="changeLockStatus('unlocked')">Unlock Door</button>

        <!-- Image showing the state of the door -->
        <div id="doorImage" class="unlocked">
            <img class="toggle-img" src="/images/smartDoorLock.jpg" alt="Lock Image">
        </div>
    </div>

    <script>
        // Function to change the lock status
        function changeLockStatus(status) {
            const statusText = document.getElementById('statusText');
            const doorImage = document.getElementById('doorImage');

            if (status === 'locked') {
                statusText.innerText = 'Door Status: Locked';
                doorImage.className = 'locked';  // Apply the locked class
            } else {
                statusText.innerText = 'Door Status: Unlocked';
                doorImage.className = 'unlocked';  // Apply the unlocked class
            }
        }
    </script>

</body>
</html>
