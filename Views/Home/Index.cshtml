@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Ensure the body and HTML cover full screen */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden; /* Prevent scrolling */
        }

        /* Style for the video to cover the entire background */
        .video-background {
            position: fixed;  /* Fix the video in place */
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover; /* Ensures the video covers the screen */
            z-index: -1; /* Places the video behind other content */
        }

        /* Content styling (text, etc.) */
        .content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-size: 2em;
            text-align: center;
        }
    </style>
</head>
<body>

    <!-- Full-page video -->
    <video class="video-background" autoplay muted loop>
        <source src="~/images/indexVideo.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <!-- Content to display on top of the video -->
    <div class="content">
        <!-- <h1 class="display-4">Welcome to RFIDlock</h1> -->
    </div>

</body>
</html>
